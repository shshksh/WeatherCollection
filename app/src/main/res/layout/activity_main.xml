<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.mob.weathercollection.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_main_titlebar"
            android:layout_width="wrap_content"
            android:layout_height="?android:actionBarSize"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="날씨 모아"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            bind:drawableStartCompat="@drawable/ic_baseline_wb_sunny_24"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_main_chooselocation"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="onChooseLocationClick"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_location_on_24"
            bind:layout_constraintBottom_toBottomOf="@id/tv_main_titlebar"
            bind:layout_constraintEnd_toStartOf="@id/btn_main_refresh"
            bind:layout_constraintTop_toTopOf="@id/tv_main_titlebar" />

        <ImageButton
            android:id="@+id/btn_main_refresh"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:onClick="@{() -> vm.refreshAllWeather()}"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_refresh_24"
            bind:layout_constraintBottom_toBottomOf="@id/tv_main_titlebar"
            bind:layout_constraintEnd_toEndOf="parent"
            bind:layout_constraintTop_toTopOf="@id/tv_main_titlebar" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintTop_toBottomOf="@+id/tv_main_titlebar"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/layout_kma"
                    layout="@layout/item_main"
                    bind:location="@{vm.locationName}"
                    bind:weather="@{vm.kmaWeather}" />

                <include
                    android:id="@+id/layout_naver"
                    layout="@layout/item_main"
                    bind:location="@{vm.locationName}"
                    bind:weather="@{vm.naverWeather}" />

                <include
                    android:id="@+id/layout_openweather"
                    layout="@layout/item_main"
                    bind:location="@{vm.locationName}"
                    bind:weather="@{vm.openWeather}" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
